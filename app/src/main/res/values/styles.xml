<resources>

    <!-- Base application theme. -->


    <style name="Item.Tumblr">
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
        <item name="android:textSize">@dimen/item_font_size_tumblr</item>
        <item name="android:textColor">@color/tumblr_primary</item>
    </style>

    <style name="Item" parent="">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="chat_text_message_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>

    </style>

    <style name="chat_timings">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#a6abad</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
    </style>


    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#2196F3</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ButtonMessage" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#009688</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>


    <style name="AppTheme.ButtonFlat" parent="Widget.AppCompat.Button.Borderless.Colored">

        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>

    </style>


    <style name="TextAppearance.MaterialSheetFab.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white_87</item>
        <item name="android:textSize">@dimen/note_textsize</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Note.Title" parent="TextAppearance.MaterialSheetFab.Note">
        <item name="android:textSize">@dimen/note_title_textsize</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Note.SubText" parent="TextAppearance.MaterialSheetFab.Note">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Widget.MaterialSheetFab.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/note_spacing</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="contentPadding">@dimen/note_content_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/note_corner_radius</item>
    </style>

</resources>
